{
  "name": "@marchintosh94/i18n-pro",
  "version": "0.1.1",
  "description": "Translation library for i18n (TS)",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "rm -rf dist/ && cp package.json _package.json && json -f package.json -I -e \"delete this.devDependencies; delete this.dependencies; delete this.scripts\"",
    "build": "npm run prepack &&  tsc --project tsconfig.build.json && tsc-alias && rm package.json && mv _package.json package.json",
    "test": "jest",
    "coverage": "jest --coverage",
    "build:link": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marchintosh94/i18nPro.git"
  },
  "bugs": {
    "url": "https://github.com/marchintosh94/i18nPro/issues"
  },
  "keywords": [
    "js",
    "i18n",
    "typescript",
    "react",
    "next",
    "vue",
    "angular"
  ],
  "author": "marchintosh94 <marcobaratto@icloud.com> (https://marcobaratto.dev/)",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "^20.6.0",
    "jest": "^29.7.0",
    "json": "^11.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-utils": "^6.1.0",
    "tsc-alias": "^1.8.7"
  }
}
