{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "paths": {
      "@/utils": [
        "./src/utils/index"
      ],
      "@/types": [
        "./src/types/index"
      ],
      "@/i18npro": [
        "./src/i18npro/index"
      ],
    },
    "resolveJsonModule": true,
    "baseUrl": "./",
    "types": ["jest", "node"],
    "declaration": true, 
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
